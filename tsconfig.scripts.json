{
  "compilerOptions": {
    "target": "ES2022",
    "module": "ESNext",
    "moduleResolution": "Node",
    "esModuleInterop": true,
    "allowSyntheticDefaultImports": true,
    "resolveJsonModule": true,
    "skipLibCheck": true,
    "baseUrl": ".",
    "paths": {
      "~~/*": ["./*"],
      "@@/*": ["./*"],
      "~/\*": ["./app/*"],
      "@/*": ["./app/*"]
    },
    "types": ["node"]
  },
  "include": ["scripts/**/*.ts", "server/**/*.ts", "shared/**/*.ts"]
}
